section
  div.container
    h3 Login
    include messages
    div.row
    form(method="post" action="/signin")
      div.input-field
        i.material-icons.prefix account_box
        input(id="username" name="username" type="text")
        label(for="username") {{ 'INDEX.USERNAME' | translate }}
      div.input-field
        i.material-icons.prefix lock
        input(id="password" name="password" type="password")
        label(for="password") {{ 'INDEX.PASSWORD' | translate }}
      div.input-field
        input.btn(type="submit" data-ng-value="'INDEX.LOGIN_BUTTON' | translate")
